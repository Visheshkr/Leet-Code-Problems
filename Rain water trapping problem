class Solution {
public:
    int trap(vector<int>& height) {
    int n=height.size();
    int left[n],right[n];
    int max_trap=0;
    left[0]=height[0];
    right[n-1]=height[n-1];
    for(int i=1;i<n;i++){
        left[i]=max(left[i-1],height[i]);   
    }
    for(int i=n-2;i>=0;i--){
        right[i]=max(right[i+1],height[i]);
    }
    for(int i=0;i<n;i++){
        max_trap+=min(right[i],left[i])-height[i];
    }
    return max_trap;
    }
};
